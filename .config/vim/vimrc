""" head
source ~/.config/vim/defaults.vim
source ~/.config/vim/hier.vim

""" file
set undofile
set autoread
set hidden

""" edit
set nowrap
set breakindent
set list
set listchars=tab:\ \ ,trail:.,extends:~,precedes:~,nbsp:+
set virtualedit=block

""" indent
set shiftwidth=4
set softtabstop=-1
set expandtab
set autoindent
set smartindent

""" move
set sidescrolloff=5
set sidescroll=1

""" search
set hlsearch
set ignorecase
set smartcase

""" screen
set signcolumn=number
set background=dark

let &t_EI = "\e[2 q"
let &t_SR = "\e[4 q"
let &t_SI = "\e[6 q"

""" keymap
nnoremap <silent> <C-L> <C-L><Cmd>nohlsearch<CR>

""" tail
source ~/.config/vim/pack.vim
